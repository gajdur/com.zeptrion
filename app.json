{
    "id": "com.zeptrion",
    "sdk": 2,
    "name": {
        "en": "Zeptrion Air",
        "de": "Zeptrion Air"
    },
    "version": "0.0.2",
    "compatibility": ">=3.0.0",
    "author": {
        "name": "Viktor Gjorgjiev",
        "email": "viktor.gjorgjiev@gmail.com"
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
        "en": "Give Homey the ability to control your Zeptrion Air devices",
        "de": "Läst euch eure Zeptrion Geräte kontrolieren"
    },
    "dependencies": {
        "net": "*"
    },
    "discovery": {
        "zeptrion_2k": {
            "type": "mdns-sd",
            "mdns-sd": {
                "name": "http",
                "protocol": "tcp"
            },
            "id": "{{txt.id}}",
            "conditions": [
                [{
                    "field": "txt.id",
                    "match": {
                        "type": "regex",
                        "value": "^zapp-"
                    }
                }]
            ]
        }
    },

    "drivers": [{
            "id": "zeptrion_air_2k_switch",
            "discovery": "zapp",
            "name": {
                "en": "Zeptrion Air 2K Light Switch"
            },
            "images": {
                "large": "/drivers/zeptrion/assets/images/large.png",
                "small": "/drivers/zeptrion/assets/images/small.png"
            },
            "class": "socket",
            "capabilities": [
                "onoff",
                "button.callbackevents",
                "button.removecallbackevents"
            ],
            "capabilitiesOptions": {
                "button.callbackevents": {
                    "maintenanceAction": true,
                    "title": {
                        "en": "Set URLs for callbacks",
                        "nl": "Instellen URL's voor callbacks"
                    },
                    "desc": {
                        "en": "Use this option to add callback URLs to your Shelly for use with trigger cards like short and long press events.",
                        "nl": "Gebruik deze optie om callback URL's toe te voegen aan jouw Shelly, deze worden gebruikt voor trigger cards zoals kort en lang ingedrukt acties."
                    }
                },
                "button.removecallbackevents": {
                    "maintenanceAction": true,
                    "title": {
                        "en": "Remove callback URLs for triggers",
                        "nl": "Verwijderen callback URL's voor triggers"
                    },
                    "desc": {
                        "en": "Use this option to remove callback URLs to your Shelly which are used with trigger cards like short and long press events.",
                        "nl": "Gebruik deze optie om callback URL's te verwijderen voor jouw Shelly, deze worden gebruikt voor trigger cards zoals kort en lang ingedrukt acties."
                    }
                }
            },
            "pair": [{
                    "id": "list_devices",
                    "template": "list_devices",
                    "options": {
                        "singular": true
                    },
                    "navigation": {
                        "next": "icon_select"
                    }
                },
                {
                    "id": "icon_select"
                },
                {
                    "id": "get_device"
                },
                {
                    "id": "add_device"
                },
                {
                    "id": "select_pairing"
                },
                {
                    "id": "manual_pairing"
                }
            ],

            "settings": [{
                    "type": "group",
                    "label": {
                        "en": "General settings",
                        "de": "Allgemeine Einstellungen"
                    },
                    "children": [{
                            "id": "settingIPAddress",
                            "type": "text",
                            "label": {
                                "en": "IP address",
                                "de": "IP Adresse"
                            },
                            "value": "0.0.0.0"
                        } {
                            "id": "polling",
                            "type": "number",
                            "value": 5,
                            "attr": {
                                "min": 5,
                                "max": 3600
                            },
                            "label": {
                                "en": "Polling Frequency",
                                "nl": "Polling frequentie"
                            }
                        },
                        {
                            "id": "offline",
                            "type": "number",
                            "value": 5,
                            "attr": {
                                "min": 2,
                                "max": 3600
                            },
                            "label": {
                                "en": "Minutes offline notification trigger",
                                "nl": "Minuten offline notificatie trigger"
                            }
                        ]
                    }
                ],
            }
        },


        {
            "id": " zeptrion_air_2k_roller",
            "discovery": "zapp",
            "name": {
                "en": "Zeptrion Air 2K Roller Shutter"
            },
            "images": {
                "large": "/drivers/zeptrion/assets/images/large.png",
                "small": "/drivers/zeptrion/assets/images/small.png"
            },
            "class": "windowcoverings",
            "capabilities": [
                "windowcoverings_state",
                "windowcoverings_set",
                "button.callbackevents",
                "button.removecallbackevents"
            ],
            "capabilitiesOptions": {
                "button.callbackevents": {
                    "maintenanceAction": true,
                    "title": {
                        "en": "Set URLs for callbacks",
                        "nl": "Instellen URL's voor callbacks"
                    },
                    "desc": {
                        "en": "Use this option to add callback URLs to your Shelly for use with trigger cards like short and long press events.",
                        "nl": "Gebruik deze optie om callback URL's toe te voegen aan jouw Shelly, deze worden gebruikt voor trigger cards zoals kort en lang ingedrukt acties."
                    }
                },
                "button.removecallbackevents": {
                    "maintenanceAction": true,
                    "title": {
                        "en": "Remove callback URLs for triggers",
                        "nl": "Verwijderen callback URL's voor triggers"
                    },
                    "desc": {
                        "en": "Use this option to remove callback URLs to your Shelly which are used with trigger cards like short and long press events.",
                        "nl": "Gebruik deze optie om callback URL's te verwijderen voor jouw Shelly, deze worden gebruikt voor trigger cards zoals kort en lang ingedrukt acties."
                    }
                }
            },
            "pair": [{
                    "id": "list_devices",
                    "template": "list_devices",
                    "options": {
                        "singular": true
                    },
                    "navigation": {
                        "next": "icon_select"
                    }
                },
                {
                    "id": "icon_select"
                },
                {
                    "id": "get_device"
                },
                {
                    "id": "add_device"
                },
                {
                    "id": "select_pairing"
                },
                {
                    "id": "manual_pairing"
                }
            ],

            "settings": [{
                    "type": "group",
                    "label": {
                        "en": "General settings",
                        "de": "Allgemeine Einstellungen"
                    },
                    "children": [{
                            "id": "settingIPAddress",
                            "type": "text",
                            "label": {
                                "en": "IP address",
                                "de": "IP Adresse"
                            },
                            "value": "0.0.0.0"
                        } {
                            "id": "polling",
                            "type": "number",
                            "value": 5,
                            "attr": {
                                "min": 5,
                                "max": 3600
                            },
                            "label": {
                                "en": "Polling Frequency",
                                "nl": "Polling frequentie"
                            }
                        },
                        {
                            "id": "offline",
                            "type": "number",
                            "value": 5,
                            "attr": {
                                "min": 2,
                                "max": 3600
                            },
                            "label": {
                                "en": "Minutes offline notification trigger",
                                "nl": "Minuten offline notificatie trigger"
                            }
                        ]
                    }
                ],
            }
        }
    ],




    "flow": {
        "actions": [{
            "id": "zeptrion_cmd_switch",
            "title": {
                "en": "Send Command to your Device"
            },
            "args": [{
                    "name": "device",
                    "type": "device",
                    "placeholder": {
                        "en": "Select Device",
                        "de": "Gerät auswählen"
                    },
                    "filter": "driver_id=zeptrion_air_2k_switch"
                },
                {
                    "name": "channel",
                    "type": "dropdown",
                    "values": [{
                            "id": "ch1",
                            "label": {
                                "en": "Channel 1"
                            }
                        },
                        {
                            "id": "ch2",
                            "label": {
                                "en": "Channel 2"
                            }
                        },
                        {
                            "id": "ch3",
                            "label": {
                                "en": "Channel 3"
                            }
                        },
                        {
                            "id": "ch4",
                            "label": {
                                "en": "Channel 4"
                            }
                        }
                    ],
                    "placeholder": {
                        "en": "Channel"
                    }
                },
                {
                    "name": "argument",
                    "type": "dropdown",
                    "values": [{
                            "id": "on",
                            "label": {
                                "en": "Switch on (100%)"
                            }
                        },
                        {
                            "id": "off",
                            "label": {
                                "en": "Switch off (0%)"
                            }
                        },
                        {
                            "id": "toggle",
                            "label": {
                                "en": "Toggle"
                            }
                        },
                    ],
                    "placeholder": {
                        "en": "Arguments"
                    }
                }
            ]
        } {
            "id": "zeptrion_cmd_roller",
            "title": {
                "en": "Send Command to your Device"
            },
            "args": [{
                    "name": "device",
                    "type": "device",
                    "placeholder": {
                        "en": "Select Device",
                        "de": "Gerät auswählen"
                    },
                    "filter": "driver_id=zeptrion_air_2k_roller"
                },
                {
                    "name": "channel",
                    "type": "dropdown",
                    "values": [{
                            "id": "ch1",
                            "label": {
                                "en": "Channel 1"
                            }
                        },
                        {
                            "id": "ch2",
                            "label": {
                                "en": "Channel 2"
                            }
                        },
                        {
                            "id": "ch3",
                            "label": {
                                "en": "Channel 3"
                            }
                        },
                        {
                            "id": "ch4",
                            "label": {
                                "en": "Channel 4"
                            }
                        }
                    ],
                    "placeholder": {
                        "en": "Channel"
                    }
                },
                {
                    "name": "argument",
                    "type": "dropdown",
                    "values": [{
                            "id": "dim_up",
                            "label": {
                                "en": "Dim up"
                            }
                        },
                        {
                            "id": "dim_down",
                            "label": {
                                "en": "Dim down"
                            }
                        },
                        {
                            "id": "move_open",
                            "label": {
                                "en": "Blinds open"
                            }
                        },
                        {
                            "id": "move_close",
                            "label": {
                                "en": "Blinds close"
                            }
                        },
                        {
                            "id": "stop",
                            "label": {
                                "en": "Stop dimming/move"
                            }
                        }
                    ],
                    "placeholder": {
                        "en": "Arguments"
                    }
                }
            ]
        }]

    }
}
