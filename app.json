{
   "id": "com.zeptrion",
   "sdk": 2,
   "name": {
      "en": "Zeptrion Air",
      "de": "Zeptrion Air"
   },	
   "version": "0.0.2",	
   "compatibility": ">=3.0.0",		
   "author": {
      "name": "Viktor Gjorgjiev",
      "email": "viktor.gjorgjiev@gmail.com"
   },
   "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
   },
   "category": "appliances",
   "description": {
      "en": "Give Homey the ability to control your Zeptrion Air devices",
      "de": "L채st euch eure Zeptrion Ger채te kontrolieren"
   },
   "dependencies": {
      "net": "*"
   },
	
	

	
"discovery": {
    "zeptrion_2k": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "http",
        "protocol": "tcp"
      },
      "id": "{{txt.id}}",
      "conditions": [
        [
          {
            "field": "txt.id",
            "match": {
            "type": "regex",
            "value": "^zapp-"
            }
          }
        ]
      ]
    },	
	
	
	
   "drivers": [
      {
         "id":" zeptrion_air_2k",
	 "discovery": "zapp",
         "name": {
            "en": "Zeptrion Air 2K"
         },
         "images": {
            "large":"/drivers/zeptrion/assets/images/large.png",
            "small":"/drivers/zeptrion/assets/images/small.png"
	 },
	 "class":"other",
         "capabilities":[],
         "pair":[
            {
               "id":"start"
            },
            {
               "id":"list_devices",
               "template":"list_devices",
               "navigation":{
                  "next":"add_devices"
               }
            },
            {
               "id":"add_devices",
               "template":"add_devices"
            }
         ],
         "settings":[
            {
               "type":"group",
               "label":{
                  "en":"General settings",
                  "de":"Allgemeine Einstellungen"
               },
               "children":[
                  {
                     "id":"settingIPAddress",
                     "type":"text",
                     "label":{
                        "en":"IP address",
                        "de":"IP Adresse"
                     },
                     "value":"0.0.0.0"
                  }
               ]
            }
         ],
         }
      }
   ],
   "flow":{
      "actions":[
         {
            "id":"zeptrion_cmd",
            "title":{
               "en":"Send Command to your Device"
            },
            "args":[
               {
                  "name":"device",
                  "type":"device",
                  "placeholder":{
                     "en":"Select Device",
                     "de":"Ger채t ausw채hlen"
                  },
                  "filter":"driver_id=zeptrion_air_2k"
               },
			   {
			   "name": "channel",
			   "type": "dropdown",
			   "values": [
			   {"id": "ch1", "label": {"en": "Channel 1"}},
			   {"id": "ch2", "label": {"en": "Channel 2"}},
			   {"id": "ch3", "label": {"en": "Channel 3"}},
			   {"id": "ch4", "label": {"en": "Channel 4"}}
			   ],
			   "placeholder": {"en": "Channel"}
			 },
			 {
			   "name": "argument",
			   "type": "dropdown",
			   "values": [
			   {"id": "on", "label": {"en": "Switch on (100%)"}},
			   {"id": "off", "label": {"en": "Switch off (0%)"}},
			   {"id": "toggle", "label": {"en": "Toggle"}},
			   {"id": "dim_up", "label": {"en": "Dim up"}},
			   {"id": "dim_down", "label": {"en": "Dim down"}},
			   {"id": "move_open", "label": {"en": "Blinds open"}},
			   {"id": "move_close", "label": {"en": "Blinds close"}},
			   {"id": "stop", "label": {"en": "Stop dimming/move"}}
			   ],
			   "placeholder": {"en": "Arguments"}
			 }
            ]
         }
      ]
   }
}
